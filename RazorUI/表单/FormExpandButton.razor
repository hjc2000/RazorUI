<div _hover="@IsHover"
	 class="root"
	 title="@HoverTitle"
	 @onclick="ChangeExpandStateAsync"
	 @onmouseenter="OnMouseEnterAsync"
	 @onmouseout="OnMouseOutAsync">
	@if (ExpandState == FormExpandState.Expand)
	{
		// 当前处于展开，需要收起
		<Icon.ExpandUp></Icon.ExpandUp>
	}
	else
	{
		// 当前处于收起，需要展开
		<Icon.ExpandDown></Icon.ExpandDown>
	}
</div>
